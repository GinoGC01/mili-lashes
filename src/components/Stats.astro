---
/**
 * Stats Component - Lash Expert
 * Barra de beneficios de alto impacto con efectos de brillo y hover.
 */

const stats = [
  { 
    icon: "diamond", 
    title: "100% Práctico", 
    subtitle: "Metodología Real" 
  },
  { 
    icon: "person_add", 
    title: "1:1 Atención", 
    subtitle: "Personalizado" 
  },
  { 
    icon: "stars", 
    title: "Chrome Kit", 
    subtitle: "Herramientas Premium" 
  },
  { 
    icon: "workspace_premium", 
    title: "Diploma", 
    subtitle: "Certificado Avalado" 
  },
];
---

<section class="bg-charcoal relative z-20 border-y border-white/5 shadow-2xl">
  <div class="max-w-7xl mx-auto">
    <div class="grid grid-cols-2 md:grid-cols-4 divide-x divide-white/5 border-x border-white/5">
      {
        stats.map((stat) => (
          <div class="p-8 md:p-10 text-center group hover:bg-white/5 transition duration-500 relative overflow-hidden cursor-default">
            <div class="absolute inset-0 bg-gradient-to-b from-white/5 to-transparent opacity-0 group-hover:opacity-100 transition duration-500" />
            
            <span class="material-symbols-outlined text-4xl md:text-5xl mb-4 text-slate-400 group-hover:text-white transition-all duration-300 drop-shadow-[0_0_10px_rgba(255,255,255,0.3)] group-hover:drop-shadow-[0_0_15px_rgba(255,255,255,0.6)]">
              {stat.icon}
            </span>
            
            <h3 class="text-white font-display text-lg md:text-xl relative z-10 tracking-wide">
              {stat.title}
            </h3>
            <p class="text-[10px] md:text-xs uppercase tracking-[0.2em] text-slate-500 mt-2 relative z-10 group-hover:text-primary transition-colors duration-300">
              {stat.subtitle}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  /* Ajuste para que los divisores no desaparezcan en móvil */
  @media (max-width: 768px) {
    .divide-x > :nth-child(odd) {
      border-right-width: 1px;
    }
    .divide-x > :nth-child(even) {
      border-right-width: 0;
    }
    /* Añadir borde inferior a la primera fila en móvil */
    .grid > :nth-child(-n+2) {
      border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }
  }
</style>