---
import Layout from '../layouts/Layout.astro';

import Hero from '../components/Hero.astro';
import Stats from '../components/Stats.astro';
import Programs from '../components/Programs.astro';
import BookingCTA from '../components/BookingCTA.astro';
import Mentor from '../components/Mentor.astro';
import Testimonials from '../components/Testimonials.astro';
import Contact from '../components/Contact.astro';

const pageTitle = "Lash Expert | Academy & Master Artist";
const pageDescription = "Formación editorial de alto nivel en extensiones de pestañas con Milagro Ciancia.";
---

<Layout title={pageTitle} description={pageDescription}>
    <main class="relative">
      <Hero />
      <Stats />
      <Programs />
      <BookingCTA />
      <Mentor />
      <Testimonials />
      <Contact/>
    </main>
</Layout>